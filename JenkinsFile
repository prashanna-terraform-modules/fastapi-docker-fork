pipeline {
    agent any
    stages{
        stage ('build'){
            steps{
                sh 'chmod +x ./scripts/setup.sh'
                sh './scripts/setup.sh'
            }
        }
        stage ('test'){
            steps{
                sh 'pylint'
                sh 'pytest'
            }
        }
        stage ('deploy'){
            steps{
                echo "deploying from webhook ..."
            }
        }
    }
}